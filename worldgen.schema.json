{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Boxy Worlds Generation Schema",
    "type":"object",
    "properties": {
        "boxes":{
            "type":"array",
            "items": {
                "description": "Box names in positions that correlate to their ids",
                "type":"string"
            }
        },
        "floorgens":{
            "type":"array",
            "description": "Floor Generation Definitions",
            "items": {
                "type":"object",
                "properties": {
                    "structures":{
                        "type":"array",
                        "items": {
                            "type":"object",
                            "properties": {
                                "name":{
                                    "type":"string",
                                    "description": "Used for annotation in the file, not parsed"
                                },
                                "file":{
                                    "type":"string",
                                    "description": "The path to the bwrom file from the server's structures folder"
                                },
                                "threshold":{
                                    "type":"number",
                                    "description": "Threshold at which the structure will appear in the world"
                                }
                            }
                        }
                    },
                    "biomes":{
                        "type":"array",
                        "items": {
                            "type":"object",
                            "required":["primary"],
                            "properties": {
                                "name":{
                                    "type":"string",
                                    "description": "Used for annotation in the file, not parsed"
                                },
                                "threshold":{
                                    "type":"number",
                                    "description": "Threshold at which the biome will appear in the world"
                                },
                                "primary":{
                                    "type":"string",
                                    "description": "The primary box the biome is comprised of, fallback if secondary (and teritary boxes aren't available"
                                },
                                "primary_wall":{
                                    "type":"boolean",
                                    "description": "Whether the primary box is a wall, probably not a good idea since the player could spawn inside it"
                                },
                                "primary_threshold":{
                                    "type":"number",
                                    "description": "The threshold used for how much the primary boxes should show up"
                                },
                                "secondary":{
                                    "type":"string",
                                    "description": "The secondary box the biome is comprised of"
                                },
                                "secondary_wall":{
                                    "type":"boolean",
                                    "description": "Whether the secondary box is a wall"
                                },
                                "secondary_threshold":{
                                    "type":"number",
                                    "description": "The threshold used for how much the secondary box type should show up"
                                },
                                "tertiaries":{
                                    "type":"array",
                                    "description": "The tertiary boxes used in the biome, the chance of a box appearing is (n=length(tertiaries),one in n)",
                                    "items": {
                                        "type":"object",
                                        "properties": {
                                            "box":{
                                                "type":"string",
                                                "description": "One of the teritary boxes generated by the game"
                                            },
                                            "wall":{
                                                "type":"boolean",
                                                "description": "Whether this tertiary box is a wall"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}